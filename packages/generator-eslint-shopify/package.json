{
  "name": "generator-eslint-shopify",
  "version": "6.0.1",
  "description": "A Yeoman generator for creating a Shopify-focused ESLint config.",
  "main": "generators/app/index.js",
  "jsnext:main": "src/app/index.js",
  "scripts": {
    "clean": "rimraf generators coverage",
    "check": "npm run lint && npm run test",
    "copy": "cd src && copyfiles '**/*' '../generators/' && cd ..",
    "build:lib": "babel src --ignore **/templates/**.js --out-dir generators",
    "build": "npm run clean && npm run copy && npm run build:lib",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run build",
    "lint": "eslint . --max-warnings 0",
    "test": "mocha test/ --recursive --compilers js:babel-core/register --reporter spec",
    "test:watch": "npm test -- --watch --reporter min"
  },
  "files": [
    "src",
    "generators"
  ],
  "keywords": [
    "yeoman",
    "yeoman-generator",
    "eslint",
    "shopify",
    "config"
  ],
  "author": {
    "name": "Chris Sauve",
    "email": "chris.sauve@shopify.com"
  },
  "bugs": {
    "url": "https://github.com/Shopify/javascript/issues"
  },
  "homepage": "https://github.com/Shopify/javascript/tree/master/packages/generator-eslint-shopify",
  "repository": "https://github.com/Shopify/javascript/tree/master/packages/generator-eslint-shopify",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "copyfiles": "^0.2.1",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-shopify": "^6.0.0",
    "eslint-plugin-shopify": "^6.0.0",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "rimraf": "^2.5.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "yeoman-assert": "^2.1.1",
    "yeoman-test": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "generator-eslint-config": "^1.1.0",
    "yeoman-generator": "^0.22.2",
    "yosay": "^1.1.0"
  }
}
